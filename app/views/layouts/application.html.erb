<!DOCTYPE html>
<html>
<head>
	<title>Rainforest2</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">
	<%= render 'shared/navigation' %>
	<div id="main-container" class="container"><!-- This breaks the login for some reason -->
	
		<% if flash[:notice] %>
		<p id="notice"><%= flash[:notice] %></p>
		<% end %>
		<% if flash[:alert] %>
		<p id="alert"><%= flash[:alert] %></p>
		<% end %>

		<p class="userinfo">
			<% if current_user %>
			Signed in as <%= current_user.name %> | <%= link_to "Log out", session_path("current"), :method => :delete %>
			<% else %>
				<% if controller_name == "sessions" %>
					<%= link_to "Sign up", new_user_path %>
				<% elsif controller_name == "users" %>
					<%= link_to "Log in", new_session_path %>
				<% else %>
					<%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
				<% end %>
			<% end %>
		</p>
		<%= yield %>
	</div> 
</body>
</html>
