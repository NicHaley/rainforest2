<h1>All Products</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Price($)</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<%= link_to new_product_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Product
<% end %>

    <% @products.each do |product| %>
      <tr>
        <td><%= link_to image_tag(product.url, :height => "80"), product %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.formatted_price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

